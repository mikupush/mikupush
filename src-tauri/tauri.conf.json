{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Miku Push!",
  "version": "0.1.1",
  "identifier": "io.mikupush.client",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "license": "Apache-2.0",
    "licenseFile": "../LICENSE",
    "homepage": "https://mikupush.io",
    "shortDescription": "Simple, lightweight, and open-source WeTransfer alternative for desktop, with anonymous sharing by default and self-hosted server support",
    "copyright": "Copyright 2025 Miku Push! Team",
    "publisher": "Miku Push! Team",
    "active": true,
    "targets": [
      "deb",
      "rpm",
      "msi",
      "dmg"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "offlineInstaller"
      }
    },
    "linux": {
      "deb": {
        "section": "net"
      }
    }
  }
}
